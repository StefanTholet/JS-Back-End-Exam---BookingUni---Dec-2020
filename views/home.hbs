    <section id="viewCatalog" class="background-img">
            <div class="added-hotels">
                {{#each hotels}}
                {{#if isLoggedIn}}
                <a href="/members/hotel/{{_id}}/details" class="added-hotel">
                {{else}}
                <a href="/" class="added-hotel">
                {{/if}}
                    <img src="{{imageUrl}}" alt=""
                        class="picture-added-hotel">
                    <h3>{{name}}</h3>
                    <span>Free rooms: {{freeRooms}}</span>
                </a>
            {{/each}}
            </div>
            
            {{#unless hotels}}
             <div class="guest">
                There are no Hotels found...
            </div> 
            {{/unless}}
        </section>

        